@model IEnumerable<AgiliFood.Models.ModeloVisao.ItensCardapioViewModel>

<div class="form-horizontal">
    <h4>Itens do Cardapio</h4>
    <hr />
    <div class="form-group">
        @Html.Label("Selecione um Produto", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Id_Produto", new SelectList(ViewBag.ProdutoLista, "id", "_cep"))
            @Html.ValidationMessageFor(model => model.Id_Produto)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Produto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Cardapio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescricaoCardapio)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Cardapio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoCardapio)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
